@model MyEvernote.EntitiesLayer.Note

@{
    ViewBag.Title = "Delete";
}
<div class="col-12">
    <h3 class="mt-3">Are you sure you want to delete this?</h3>
</div>
<div class="col-12">
    <div class="mt-2">
        <hr />

        <div>
            @if (Model.ImageCap == null)
            {
                <img src="~/Images/UserImages/" class="rounded" style="border-radius: 8px; width: 300px; height: 190px;" alt="Foto Movcud Deyil" />
            }
            else
            {
                <img src="/Images/NoteImages/@Model.ImageCap" class="rounded" style="border-radius: 8px; width: 300px; height: 190px;" alt="Foto Movcud Deyil" />
            }
        </div>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.NoteTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NoteTitle)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Text)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Text)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsDraft)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsDraft)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LikeCount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LikeCount)
            </dd>

            <dt>
                Post Kommentarileri
            </dt>

            <dd>
                @Model.Comments.Count
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-outline-danger" /> |
                <a href="/Note/Index" class="btn btn-outline-dark">Geri Don</a>
            </div>
        }
    </div>
</div>


