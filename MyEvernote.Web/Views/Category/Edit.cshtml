@model MyEvernote.EntitiesLayer.Category

@{
    ViewBag.Title = "Edit";
}


<div class="col-12">
    @if (ViewBag.NotUpdated != null)
    {
    <div class="justMomentAlert">
        <br />
        <div class="alert alert-danger" role="alert">
            @ViewBag.NotUpdated
        </div>
        <br />
    </div>
        
    }
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="mt-3">Kateqoriya</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @Value = Model.CategoryName } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description,5,30, new { htmlAttributes = new { @class = "form-control", @Value = Model.Description } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Category/Index" class="btn btn-secondary">Geri Don</a>
            </div>
        </div>
    </div>
}

<script>
    $(function () {
        if ($(".justMomentAlert")!==undefined)
        {
            setTimeout(function () {
                $(".justMomentAlert").hide(300);
            },3000);
        }
    });
</script>