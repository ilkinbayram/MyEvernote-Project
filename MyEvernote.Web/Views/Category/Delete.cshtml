@model MyEvernote.EntitiesLayer.Category

@{
    ViewBag.Title = "Delete";
}



    <div>
        <h4 class="mt-3 mb-3">Category</h4>

        <br />

        @if (ViewBag.NotDeleted != null)
        {
            <div class="justMomentAlert">
                <br />
                <div class="alert alert-danger">
                    ViewBag.NotDeleted
                </div>
                <br />
            </div>

        }
        <br />
        <div class="alert alert-warning">
            <h3>Are you sure you want to delete this?</h3>
        </div>

        <br />
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CategoryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModifiedOn)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ModifiedUsername)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModifiedUsername)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-danger" /> | <a href="/Category/Index" class="btn btn-outline-dark">Geri Don</a>
            </div>
        }
    </div>


<script>
    $(function () {
        if ($(".justMomentAlert")!==undefined)
        {
            setTimeout(function () {
                $(".justMomentAlert").hide(300);
            },3000);
        }
    });
</script>