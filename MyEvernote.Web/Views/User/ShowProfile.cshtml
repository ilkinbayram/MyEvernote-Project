@using MyEvernote.EntitiesLayer
@model User
@{
    ViewBag.Title = "ShowProfile";
}

    <h2 class="mt-3 text-center">
        Welcome !<br />
        @if (Model.IsAdmin)
        {
            <span class="text-success">Admin</span>
        }
        else
        {
            <span class="text-secondary">Istifadeci</span>
        }
        @Model.Username
    </h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-3 text-center mt-4 mb-4">
            <div>
                <img  class="rounded-circle" style="width: 100%; height: 100%;" src="/Images/UserImages/@Model.ImageRoad" alt="Resim Yuklenmedi" />
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-5">
            <strong>
                @Html.DisplayNameFor(x => Model.Username)
            </strong>
            &nbsp; <i>@Model.Username</i>
            <br />
            <strong>
                @Html.DisplayNameFor(x => Model.Email)
            </strong>
            &nbsp; <i>@Model.Email</i>

        </div>
        <div class="col-3"></div>
    </div>
</div>

